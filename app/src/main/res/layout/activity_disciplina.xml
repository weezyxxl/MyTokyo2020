<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dam.upm.mytokyo2020.Fragmento_Disciplina"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView40"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_archery" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/disciplinaTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_weight="1"
                android:text="Archery"
                android:textAlignment="center"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/arc_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Click here for more info" />
        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/LineaCabecera"
        android:layout_width="fill_parent"
        android:layout_height="2px"
        android:layout_span="6"
        android:background="#cecece"
        android:layout_marginTop="32dp">

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="12dp">

        <TabHost
            android:id="@+id/tabHost"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TabWidget
                    android:id="@android:id/tabs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <FrameLayout
                    android:id="@android:id/tabcontent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:id="@+id/Eventos"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/titulo_informacion_usuario2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingTop="15dp"
                                android:paddingLeft="15dp"
                                android:text="Men's Events"
                                android:textAppearance="?android:attr/textAppearanceSmall" />

                            <android.support.v7.widget.CardView
                                android:layout_width="300dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                card_view:cardCornerRadius="2dp"
                                card_view:cardUseCompatPadding="true">

                                <GridLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:columnCount="1"
                                    android:padding="30dp"
                                    android:rowCount="2">

                                    <TextView
                                        android:id="@+id/texto_nombre"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginBottom="32dp"
                                        android:layout_marginRight="15dp"
                                        android:text="Individual 70m Men"
                                        android:textAppearance="?android:attr/textAppearanceSmall" />

                                    <TextView
                                        android:id="@+id/texto_nombre2"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Team 70m Men"
                                        android:layout_marginRight="8dp"
                                        android:textAppearance="?android:attr/textAppearanceSmall" />

                                </GridLayout>
                                <ImageButton
                                    android:id="@+id/notification"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="right"
                                    card_view:srcCompat="@drawable/ic_notifications_none_black_18dp" />
                            </android.support.v7.widget.CardView>

                            <TextView
                                android:id="@+id/titulo_informacion_usuario3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingTop="8dp"
                                android:paddingLeft="15dp"
                                android:text="Women's Events"
                                android:textAppearance="?android:attr/textAppearanceSmall" />

                            <android.support.v7.widget.CardView
                                android:layout_width="300dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                card_view:cardCornerRadius="2dp"
                                card_view:cardUseCompatPadding="true">

                                <GridLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:columnCount="1"
                                    android:padding="30dp"
                                    android:rowCount="2">


                                    <TextView
                                        android:id="@+id/texto_nombre3"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginBottom="32dp"
                                        android:layout_marginRight="15dp"
                                        android:text="Individual 70m Women"
                                        android:textAppearance="?android:attr/textAppearanceSmall" />

                                    <TextView
                                        android:id="@+id/texto_nombre4"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Team 70m Women"
                                        android:layout_marginRight="8dp"
                                        android:textAppearance="?android:attr/textAppearanceSmall" />

                                </GridLayout>
                            </android.support.v7.widget.CardView>

                        </LinearLayout>
                    </LinearLayout>



                    <LinearLayout
                        android:id="@+id/Schedule"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_marginTop="12dp">

                        <TableLayout
                            android:id="@+id/table"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:shrinkColumns="*"
                            android:stretchColumns="*"
                           >

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textAlignment="center"
                            android:background="#0db8c7">

                            <TextView
                                android:id="@+id/textView6"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="@string/tipo"
                                android:textAlignment="center"
                                android:textColor="#ffffff"/>

                            <TextView
                                android:id="@+id/textView20"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="Day"
                                android:textAlignment="center"
                                android:textColor="#ffffff"/>


                            <TextView
                                android:id="@+id/textView7"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="@string/hora"
                                android:textAlignment="center"
                                android:textColor="#ffffff"/>

                            <TextView
                                android:id="@+id/textView8"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="@string/lugar"
                                android:textAlignment="center"
                                android:textColor="#ffffff"/>
                        </TableRow>
                        </TableLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/Resultados"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_marginTop="12dp">

                        <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
                            android:id="@+id/Tabla"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:stretchColumns="1"
                            >

                            <!-- Cabecera -->
                            <TableRow
                                android:id="@+id/Cabecera"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:background="#006597">

                                <TextView
                                    android:id="@+id/ColumnaRank"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:padding="2px"
                                    android:text="Rank"
                                    android:textColor="#ffffff"
                                    android:textSize="16sp" />

                                <TextView
                                    android:id="@+id/ColumnaCountry"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:padding="2px"
                                    android:text="Country"
                                    android:textColor="#ffffff"
                                    android:textSize="16sp"
                                    />

                                <TextView
                                    android:id="@+id/ColumnaPuntos"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:padding="2px"
                                    android:text="Points"
                                    android:textAlignment="center"
                                    android:textColor="#ffffff"
                                    android:textSize="16sp"
                                    />


                            </TableRow>

                            <!--  Nueva Fila -->
                            <TableRow
                                android:id="@+id/SeparadorCabecera"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content" >

                                <FrameLayout
                                    android:id="@+id/LineaCabecera5"
                                    android:layout_width="fill_parent"
                                    android:layout_height="2px"
                                    android:layout_span="6"
                                    android:background="#cecece" >
                                </FrameLayout>
                            </TableRow>

                            <TableRow
                                android:id="@+id/Fila1"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content" >

                                <TextView
                                    android:id="@+id/Rank1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="1"
                                    android:textSize="20sp" />

                                <TextView
                                    android:id="@+id/Country1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:text="Spain"
                                    android:textSize="20sp"
                                    android:drawableLeft="@drawable/spain"
                                    android:drawablePadding="42dp"
                                    android:textAlignment="center"

                                    />

                                <TextView
                                    android:id="@+id/Puntos1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:text="100"
                                    android:textSize="20sp"
                                    android:drawablePadding="42dp"

                                    />


                            </TableRow>

                            <!--  Nueva Fila -->

                            <TableRow
                                android:id="@+id/SeparadorCabecera2"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content" >

                                <FrameLayout
                                    android:id="@+id/LineaCabecera2"
                                    android:layout_width="fill_parent"
                                    android:layout_height="2px"
                                    android:layout_span="6"
                                    android:background="#cecece" >
                                </FrameLayout>
                            </TableRow>

                            <TableRow
                                android:id="@+id/Fila3"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content" >

                                <TextView
                                    android:id="@+id/Rank3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="2"
                                    android:textSize="20sp" />

                                <TextView
                                    android:id="@+id/Country3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:text="China"
                                    android:textSize="20sp"
                                    android:drawableLeft="@drawable/china"
                                    android:drawablePadding="42dp"
                                    android:textAlignment="center"

                                    />

                                <TextView
                                    android:id="@+id/Puntos2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:text="70"
                                    android:textSize="20sp"
                                    android:drawablePadding="42dp"

                                    />


                            </TableRow>

                            <!--  Nueva Fila -->

                            <TableRow
                                android:id="@+id/SeparadorCabecera3"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content" >

                                <FrameLayout
                                    android:id="@+id/LineaCabecera3"
                                    android:layout_width="fill_parent"
                                    android:layout_height="2px"
                                    android:layout_span="6"
                                    android:background="#cecece" >
                                </FrameLayout>
                            </TableRow>

                            <TableRow
                                android:id="@+id/Fila4"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content" >

                                <TextView
                                    android:id="@+id/Rank4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="3"
                                    android:textSize="20sp" />

                                <TextView
                                    android:id="@+id/Country4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:text="Italy"
                                    android:textSize="20sp"
                                    android:drawableLeft="@drawable/italy"
                                    android:drawablePadding="42dp"
                                    android:textAlignment="center"
                                    />

                                <TextView
                                    android:id="@+id/Puntos3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:text="50"
                                    android:textSize="20sp"
                                    android:drawablePadding="42dp"

                                    />


                            </TableRow>

                            <!--  Nueva Fila -->
                            <TableRow
                                android:id="@+id/SeparadorCabecera4"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content" >

                                <FrameLayout
                                    android:id="@+id/LineaCabecera4"
                                    android:layout_width="fill_parent"
                                    android:layout_height="2px"
                                    android:layout_span="6"
                                    android:background="#cecece" >
                                </FrameLayout>
                            </TableRow>

                            <TableRow
                                android:id="@+id/Fila5"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content" >

                                <TextView
                                    android:id="@+id/Rank5"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="4"
                                    android:textSize="20sp" />

                                <TextView
                                    android:id="@+id/Country5"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:text="Japan"
                                    android:textSize="20sp"
                                    android:drawableLeft="@drawable/japan"
                                    android:drawablePadding="42dp"
                                    android:textAlignment="center"
                                    />
                                <TextView
                                    android:id="@+id/Puntos4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:text="30"
                                    android:textSize="20sp"
                                    android:drawablePadding="42dp"

                                    />


                            </TableRow>

                        </TableLayout>
                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>
        </TabHost>
    </LinearLayout>
</LinearLayout>
</ScrollView>